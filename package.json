{
  "name": "majel",
  "version": "0.2.0",
  "description": "STFC Fleet Intelligence System â€” Named in honor of Majel Barrett-Roddenberry (1932â€“2008)",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc && cp -r src/client dist/client",
    "start": "node --import dotenv/config dist/server/index.js",
    "dev": "tsx watch --import dotenv/config src/server/index.ts",
    "dev:fresh": "npm run kill --silent; npm run dev",
    "kill": "lsof -t -i:${MAJEL_PORT:-3000} | xargs -r kill -9 2>/dev/null; echo 'ðŸ”ª Port ${MAJEL_PORT:-3000} cleared'",
    "clean": "rm -rf dist coverage .smartergpt/lex/settings.db",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "local-ci": "npm run typecheck && npm run test:coverage && npm run build",
    "health": "curl -s http://localhost:${MAJEL_PORT:-3000}/api/health | python3 -m json.tool"
  },
  "keywords": [
    "stfc",
    "fleet",
    "gemini",
    "lex"
