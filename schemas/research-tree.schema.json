{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://majel.local/schemas/research-tree.schema.json",
  "title": "Majel Research Tree Snapshot",
  "description": "Advanced-package research ingest payload for ADR-028 Phase 2.",
  "type": "object",
  "required": ["schema_version", "captured_at", "nodes", "state"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "captured_at": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "description": "Origin of export (e.g. ripper-cc, manual-json)."
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/research_node"
      }
    },
    "state": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/research_state"
      }
    }
  },
  "$defs": {
    "research_node": {
      "type": "object",
      "required": ["node_id", "tree", "name", "max_level", "buffs"],
      "properties": {
        "node_id": {
          "type": "string"
        },
        "tree": {
          "type": "string",
          "description": "Research tree grouping, e.g. combat/galaxy/station."
        },
        "name": {
          "type": "string"
        },
        "max_level": {
          "type": "integer",
          "minimum": 1
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "buffs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/buff"
          }
        }
      }
    },
    "research_state": {
      "type": "object",
      "required": ["node_id", "level"],
      "properties": {
        "node_id": {
          "type": "string"
        },
        "level": {
          "type": "integer",
          "minimum": 0
        },
        "completed": {
          "type": "boolean",
          "default": false
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "buff": {
      "type": "object",
      "required": ["kind", "metric", "value", "unit"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["ship", "officer", "resource", "combat", "other"]
        },
        "metric": {
          "type": "string",
          "description": "Buff metric identifier, e.g. weapon_damage, hull_health, mining_speed."
        },
        "value": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "enum": ["percent", "flat", "multiplier"]
        }
      }
    }
  }
}
